{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@core/*": ["src/core/*"],
      "@adapters/*": ["src/adapters/*"]
    },
    "types": ["node", "vitest"]
  },
  "include": ["src", "test", "tsup.config.ts", "vitest-config.ts", "vitest-e2e.config.ts"],
  "exclude": ["dist", "node_modules", "examples"]
}
